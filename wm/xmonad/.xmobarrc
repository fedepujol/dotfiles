Config {
    -- Appearance
    font =              "xft:Ubuntu Nerd Font:size=12:antialias=true",
    additionalFonts = ["xft:Font Awesome 5 Free Solid:pixelsize=12"],
    bgColor =           "#161616",
    fgColor =           "#FFFFFF",
    position =          Top,
    border =            NoBorder,

    -- General Behaviour
    lowerOnStart =      True,       -- Send to bottom of window stack on start
    hideOnStart =       False,      -- Start with window unmapped (hidden)
    allDesktops =       True,       -- Show on all desktops
    overrideRedirect =  True,       -- Set the override redirect flag (XLib)
    pickBroadest =      False,      -- Choose widest display (Multi-Monitor)
    persistent =        True,       -- Enable/Disable hiding

    -- Plugins
    commands = [
		-- Time and Date
        Run Com "date" ["+%Y-%m-%d"] "myDate" 0,
        Run Com "date" ["+%H:%M:%S"] "myTime" 10,
        -- Kernel Version
		Run Com "uname" ["-r"] "" 0,
        -- Volume
		Run Alsa "default" "Master" [],
        -- Brightness
        Run Brightness ["-t", "<percent>%", "--", "-D", "/sys/class/backlight/intel_backlight"] 60,
        -- Num/Caps Lock
        Run Locks,
        -- Updates
        Run CommandReader "~/.config/scripts/updates.sh" "upd",
		Run XMonadLog 
	],

    -- Layout
    sepChar =   "%",        -- Delineator between plugin names and straight text
    alignSep =  "}{",       -- Separator between left-right alignment
    template =  "%XMonadLog% | <fc=#31A835><fn=2>   </fn>%locks%</fc> }{ <fc=#64B5F6><fn=2> </fn>%upd% </fc> | <fc=#FF3B3B><fn=2>  </fn>%uname% </fc> |  %alsa:default:Master% | <fn=2>盛</fn> %bright% | <fc=#C4C400><fn=2></fn> %myDate%</fc> <fc=#96E098><fn=2></fn> %myTime%</fc> "
}
